@model urbanbooks.Models.Billing

@{
    ViewBag.Title = "AddToCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddToCart</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
