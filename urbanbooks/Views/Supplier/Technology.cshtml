@using PagedList
@using PagedList.Mvc
@model IPagedList<Supplier>

@{
    ViewBag.Title = "Technology";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Technology</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().ContactPerson)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Fax)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().ContactPersonNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    Session["supBack"] = HttpContext.Current.Request.RawUrl;
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactPerson)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fax)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactPersonNumber)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { SupplierID=item.SupplierID }) |
            @Html.ActionLink("Details", "Details", new { SupplierID=item.SupplierID }) |
            @Html.ActionLink("Delete", "Delete", new { SupplierID=item.SupplierID })
        </td>
    </tr>
}

</table>
