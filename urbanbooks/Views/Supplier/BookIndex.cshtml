@model IEnumerable<urbanbooks.Supplier>

@{
    ViewBag.Title = "Book Suppliers";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>BookIndex</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactPerson)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fax)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactPersonNumber)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactPerson)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fax)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactPersonNumber)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { SupplierID=item.SupplierID }) |
            @Html.ActionLink("Details", "Details", new { SupplierID=item.SupplierID }) |
            @Html.ActionLink("Delete", "Delete", new { SupplierID=item.SupplierID })
        </td>
    </tr>
}

</table>
