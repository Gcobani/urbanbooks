@using urbanbooks.Models
@using urbanbooks.Helpers
@model AddNewBookViewModel


<div class="container">
    <br /><br />
    <dl class="">

        <dt>
            @Html.DisplayNameFor(model => model.books.ISBN)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.books.ISBN)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.books.Synopsis)
        </dt>
        <dd style="width:800px">
            @Html.DisplayFor(model => model.books.Synopsis)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.books.SellingPrice)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.books.SellingPrice)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.bc.CategoryName)
        </dt>
        <dd>
            @foreach (var item in Model.bookCategoryList)
            {
                @Html.ActionLink("" + item.CategoryName, "ByCategory", "Book", new { CategoryID = item.BookCategoryID }, null)}
        </dd>
        <dt>
            Author(s)
        </dt>
        <dd>
            @foreach (var item in Model.AuthorList)
            {
                @Html.ActionLink("" + item.Name + " " + item.Surname, "Books", "Author", new { AuthorID = item.AuthorID }, null)
                <span>, </span>
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.publisher.Name)
        </dt>
        <dd>
            @foreach (var item in Model.PublisherList)
            {
                @Html.ActionLink("" + item.Name, "Books", "Publisher", new { PublisherID = item.PublisherID }, null)}
        </dd>
        <dt>Actions</dt>
        <dd>
            @foreach (var item in Model.bookList) {
            string returnUrl = HttpContext.Current.Request.RawUrl;
            @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-heart-empty'></span>", "Add to Wishlist", "Add", "Wishlist", new { productId = item.ProductID, returnUrl }, htmlAttributes: new { @class = "btn btn-default" }) 
             <span>&nbsp;</span>
            @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-shopping-cart'></span>", "Add to Cart", "AddToCart", "Cart", new { productId = item.ProductID, returnUrl }, htmlAttributes: new { @class = "btn btn-default" })
            }
        </dd>
    </dl>
</div>
