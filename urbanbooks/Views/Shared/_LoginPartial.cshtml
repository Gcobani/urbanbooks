@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Hello " + User.Identity.Name + "!", "Manage", "Account", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Quick Register", "Register", "Account", new { id = "registerLink" }, new { data_modal = "" })</li>
        <li>@Html.ActionLink("Register", "FullRegister", "Account", new { id = "fullRegisterLink" })</li>

        <li>@Html.ActionLink("Log in", "Login", "Account", new { id = "loginLink" }, new { data_modal = "" })</li>
    </ul>
}
