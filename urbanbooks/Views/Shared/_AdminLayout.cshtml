<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/fonts/fontello/css")
    @Scripts.Render("~/bundles/modernizr")
    @using urbanbooks.Helpers;
    <link rel="stylesheet" href="~/fonts/fontello/css/fontello.css" type="text/css" />
    <link rel="stylesheet" href="~/fonts/fontello/css/animation.css" type="text/css" />

</head>
<body>
    <!--Navigation Bar-->
    <div class="navbar navbar-inverse navbar-fixed-top">

        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Dashboard", "Index", "Admin", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">

                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-user"></span> Suppliers</a>
                    <ul class="dropdown-menu" role="menu">
                        <li>@Html.ActionLink("Register new Supplier", "Create", "Supplier")</li>
                        <li class="divider"></li>
                        <li>@Html.ActionLink("Technology Suppliers", "Technology", "Supplier")</li>
                        <li>@Html.ActionLink("Book Suppliers", "Book", "Supplier")</li>
                    </ul>
                </li>

                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="icon-book"></span> Books </a>
                    <ul class="dropdown-menu" role="menu">
                        <li>@Html.ActionLink("Add new", "Create", "Book")</li>
                        <li>@Html.ActionLink("Manage books", "Create", "Book")</li>
                        <li class="divider"></li>
                        <li>@Html.ActionLink("Add new Category", "Create", "BookType")</li>
                        <li>@Html.ActionLink("Manage Categories Category", "Index", "BookType")</li>
                        <li class="divider"></li>
                        <li>@Html.ActionLink("Add new Publisher", "Create", "Publisher")</li>
                        <li>@Html.ActionLink("Manage Publishers", "Index", "Publisher")</li>
                        <li class="divider"></li>
                        <li>@Html.ActionLink("Add new Author", "Create", "Author")</li>
                        <li>@Html.ActionLink("Manage Authors", "Index", "Author")</li>

                    </ul>
                </li>

                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="icon-laptop"></span> Devices </a>
                    <ul class="dropdown-menu" role="menu">
                        <li>@Html.ActionLink("Add new", "Create", "Technology")</li>
                        <li>@Html.ActionLink("Manage Devices", "Create", "Book")</li>
                        <li class="divider"></li>
                        <li>@Html.ActionLink("Add new category", "Create", "Book")</li>
                        <li>@Html.ActionLink("Manage categories", "Create", "Book")</li>
                        <li class="divider"></li>
                        <li>@Html.ActionLink("Add new manufacturer", "Create", "Book")</li>
                        <li>@Html.ActionLink("Manage manufacturers", "Create", "Book")</li>
                    </ul>
                </li>

                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-stats"></span> Reports </a>
                    <ul class="dropdown-menu" role="menu">
                        <li class="divider"></li>
                        <li>Sales Reports</li>
                    </ul>
                </li>

                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-certificate"></span> Specials </a>
                    <ul class="dropdown-menu" role="menu">
                        <li>Create Special</li>
                        <li>Manage Specials</li>
                    </ul>
                </li>

            </ul>
            @Html.Partial("_LoginPartial")
        </div>

    </div>

    <!--LogIn Modal PlaceHolder-->
    <div id="myModal" class="modal fade in">
        <div class="modal-dialog">
            <div class="modal-content">
                <div id="myModalContent">

                </div>
            </div>
        </div>
    </div>

    <!--Body PlaceHolder-->
    <div class="body-content">
        @RenderBody()
        <hr />
        <!--Footer-->
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modalform")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modalform")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/fuelux")
    @RenderSection("scripts", required: false)
</body>
</html>


