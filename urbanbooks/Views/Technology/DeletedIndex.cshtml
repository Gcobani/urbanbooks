@model IEnumerable<urbanbooks.Technology>
@using urbanbooks.Models
@using urbanbooks.Helpers;

@{
    ViewBag.Title = "DeletedIndex";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<div class="row">

    <div class="col-md-9">
        <h2> Deleted Devices</h2>
    </div>

    <div class="col-md-3">
        <br />
        <div class="navbar-form input-group form-inline pull-right">
            @using (@Html.BeginForm("AdminBookSearch", "Search", FormMethod.Post, null))
            {
                @*@Html.TextBox("txt", null, new { htmlAttributes = new { @class = "form-control input-sm input-group-addon", placeholder = "Search" } })*@
                <div class="btn-group">
                    <input type="text" name="query" placeholder="Search" value="" class="form-control input-sm" />
                    <button type="submit" class="btn btn-default input-group-addon" data-close-others="true">
                        <span class="glyphicon glyphicon-search "></span>
                    </button>
                </div>
            }
        </div>
    </div>

</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ModelName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModelNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageFront)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageTop)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageSide)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SellingPrice)
        </th>
    </tr>

    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ModelName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModelNumber)
                </td>
                <td>
                    <img src="~/Uploads/Tech/@item.ImageFront" width="200" height="100" />
                </td>
                <td>
                    <img src="~/Uploads/Tech/@item.ImageTop" width="200" height="100" />
                </td>
                <td>
                    <img src="~/Uploads/Tech/@item.ImageSide" width="200" height="100" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SellingPrice)
                </td>
                <td>
                    @Html.ActionLink("Restore Device", "Restore", new { ProductID = item.ProductID })
                </td>
            </tr>
        }
    }

</table>